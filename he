FROM ubuntu:21.04
ENV JDK_HOME=/u01/data/jdk-11
ENV PATH=${PATH}:${JDK_HOME}/bin

RUN mkdir -p /u01/lib/
WORKDIR /u01/lib/
RUN apt update -y 
RUN apt install -y CURL
RUN CURL https://download.java.net/openjdk/jdk11/ri/openjdk-11+28_linux-x64_bin.tar.gz --output ./u01/lib/openjdk-11+28_linux-x64_bin.tar.gz
RUN gunzip ./u01/lib/openjdk-11+28_linux-x64_bin.tar.gz
RUN tar -xvf ./u01/lib/openjdk-11+28_linux-x64_bin.tar.gz
RUN rm -rf ./u01/lib/openjdk-11+28_linux-x64_bin.tar.gz

COPY target/covido-0.0.1-SNAPSHOT.war   .
RUN chmod u+x covido-0.0.1-SNAPSHOT.war

COPY startup.sh .
RUN chmod u+x startup.sh
ENTRYPOINT ["./startup.sh"]
